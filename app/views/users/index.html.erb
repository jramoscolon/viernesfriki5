
<h1 align="center">Welcome to the Users Page!</h1>

<% @users.each do |user| %>
	<ul class="listing">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				<li><%= link_to user.username, user_path(user) %><br></li>
				<li><%= link_to gravatar_for(user), user_path(user) %></li>
				<li><small><%= pluralize(user.episodes.count, "episode") if user.episodes %></small></li>
			</div><!-- col -->
		</div><!-- end of container -->
	</ul>
	
<% end %>