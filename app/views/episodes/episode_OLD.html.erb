<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Image url</th>
      <th>User info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @obj.each do |episode| %>
      <tr>
        <td><%= episode.title %></td>
        <td><%= episode.body %></td>
        <td><%= episode.image_url %></td>
        <td>
          <!-- Include the user info below -->
          <small>Created by: <%= episode.user.username if episode.user %>,
                  <%= time_ago_in_words(episode.created_at) %> ago,
                  <%= time_ago_in_words(episode.updated_at) %> ago
          </small>
        </td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>